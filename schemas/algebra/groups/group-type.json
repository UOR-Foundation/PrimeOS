{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://uor-foundation.org/schemas/algebra/groups/group-type.json",
  "title": "Group Type Schema",
  "description": "Schema defining specific types of groups within the UOR framework",
  "@context": {
    "@vocab": "https://schema.org/",
    "uor": "https://uor-foundation.org/schemas/core/"
  },
  "type": "object",
  "required": ["id", "type", "groupFamily", "properties", "canonicalExamples", "primeElementTypes"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uri",
      "description": "Unique identifier for the group type"
    },
    "type": {
      "type": "string",
      "const": "GroupType",
      "description": "Type of the mathematical entity"
    },
    "groupFamily": {
      "type": "string",
      "enum": [
        "cyclic",
        "dihedral",
        "symmetric",
        "alternating",
        "matrix",
        "lie",
        "abelian",
        "free",
        "braid",
        "quaternion",
        "monster",
        "sporadic",
        "linear",
        "projective",
        "general-linear",
        "special-linear",
        "unitary",
        "special-unitary",
        "orthogonal",
        "special-orthogonal",
        "symplectic",
        "exceptional"
      ],
      "description": "Family of groups this type belongs to"
    },
    "notation": {
      "type": "object",
      "required": ["standard"],
      "properties": {
        "standard": {
          "type": "string",
          "description": "Standard notation for this group type"
        },
        "alternatives": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Alternative notations"
        },
        "latexRepresentation": {
          "type": "string",
          "description": "LaTeX representation of the group notation"
        }
      }
    },
    "definition": {
      "type": "object",
      "required": ["informal", "formal"],
      "properties": {
        "informal": {
          "type": "string",
          "description": "Informal definition of the group type"
        },
        "formal": {
          "type": "string",
          "description": "Formal mathematical definition"
        },
        "constructiveMethods": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the construction method"
              },
              "description": {
                "type": "string",
                "description": "Description of the construction method"
              }
            }
          },
          "description": "Ways to construct this group type"
        },
        "presentation": {
          "type": "string",
          "description": "Group presentation in terms of generators and relations"
        }
      }
    },
    "properties": {
      "type": "object",
      "required": ["order", "isAbelian", "isSimple"],
      "properties": {
        "order": {
          "type": "string",
          "description": "Order of groups of this type (may be parametrized)"
        },
        "isFinite": {
          "type": "boolean",
          "description": "Whether groups of this type are finite"
        },
        "isAbelian": {
          "type": "boolean",
          "description": "Whether groups of this type are abelian (commutative)"
        },
        "isSimple": {
          "type": "boolean",
          "description": "Whether groups of this type are simple"
        },
        "isSolvable": {
          "type": "boolean",
          "description": "Whether groups of this type are solvable"
        },
        "isNilpotent": {
          "type": "boolean",
          "description": "Whether groups of this type are nilpotent"
        },
        "rank": {
          "type": "string",
          "description": "Rank of groups of this type (if applicable)"
        },
        "derivedLength": {
          "type": "string",
          "description": "Derived length of groups of this type (if applicable)"
        },
        "center": {
          "type": "string",
          "description": "Description of the center of groups of this type"
        }
      }
    },
    "canonicalExamples": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["parameters", "description"],
        "properties": {
          "parameters": {
            "type": "string",
            "description": "Parameters specifying this example"
          },
          "description": {
            "type": "string",
            "description": "Description of this example"
          },
          "order": {
            "type": "string",
            "description": "Order of this example"
          },
          "elements": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Elements of this group (if small)"
          },
          "generators": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Generators of this group"
          },
          "id": {
            "type": "string",
            "format": "uri",
            "description": "Reference to group domain entity for this example"
          }
        }
      },
      "description": "Canonical examples of groups of this type"
    },
    "primeElementTypes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": {
            "type": "string",
            "description": "Type of prime element"
          },
          "description": {
            "type": "string",
            "description": "Description of this prime element type"
          },
          "properties": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Properties of this prime element type"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Examples of this prime element type"
          }
        }
      },
      "description": "Types of prime elements in groups of this type"
    },
    "factorizationRules": {
      "type": "object",
      "description": "Rules for factorizing elements in groups of this type",
      "properties": {
        "existence": {
          "type": "string",
          "enum": [
            "always",
            "conditional",
            "special-cases-only",
            "never"
          ],
          "description": "Whether factorization exists for elements"
        },
        "uniqueness": {
          "type": "string",
          "enum": [
            "unique",
            "unique-up-to-ordering",
            "unique-up-to-conjugacy",
            "non-unique",
            "unique-in-specific-cases"
          ],
          "description": "Type of uniqueness for factorizations"
        },
        "method": {
          "type": "string",
          "description": "Method for factorizing elements"
        },
        "canonicalForm": {
          "type": "string",
          "description": "Canonical form for factorizations"
        }
      }
    },
    "subgroupStructure": {
      "type": "object",
      "description": "Structure of subgroups for groups of this type",
      "properties": {
        "maximalSubgroups": {
          "type": "string",
          "description": "Description of maximal subgroups"
        },
        "normalSubgroups": {
          "type": "string",
          "description": "Description of normal subgroups"
        },
        "subgroupLattice": {
          "type": "string",
          "description": "Description of the subgroup lattice"
        },
        "characteristicSubgroups": {
          "type": "string",
          "description": "Description of characteristic subgroups"
        }
      }
    },
    "quotientGroups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "normalSubgroup": {
            "type": "string",
            "description": "Description of the normal subgroup"
          },
          "quotientType": {
            "type": "string",
            "description": "Type of the resulting quotient group"
          },
          "isomorphicTo": {
            "type": "string",
            "description": "What the quotient group is isomorphic to"
          }
        }
      },
      "description": "Quotient groups for groups of this type"
    },
    "representationTheory": {
      "type": "object",
      "description": "Representation theory for groups of this type",
      "properties": {
        "irreducibleRepresentations": {
          "type": "string",
          "description": "Description of irreducible representations"
        },
        "characterTable": {
          "type": "string",
          "description": "Description of the character table"
        },
        "regularRepresentation": {
          "type": "string",
          "description": "Description of the regular representation"
        },
        "faithfulRepresentations": {
          "type": "string",
          "description": "Description of faithful representations"
        }
      }
    },
    "automorphismGroup": {
      "type": "object",
      "description": "Automorphism group for groups of this type",
      "properties": {
        "structure": {
          "type": "string",
          "description": "Structure of the automorphism group"
        },
        "order": {
          "type": "string",
          "description": "Order of the automorphism group (may be parametrized)"
        },
        "innerAutomorphismGroup": {
          "type": "string",
          "description": "Description of the inner automorphism group"
        },
        "outerAutomorphismGroup": {
          "type": "string",
          "description": "Description of the outer automorphism group"
        }
      }
    },
    "cohomologyGroups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "degree": {
            "type": "string",
            "description": "Degree of the cohomology group"
          },
          "coefficients": {
            "type": "string",
            "description": "Coefficient system"
          },
          "description": {
            "type": "string",
            "description": "Description of the cohomology group"
          }
        }
      },
      "description": "Cohomology groups for groups of this type"
    },
    "applications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "domain": {
            "type": "string",
            "description": "Application domain"
          },
          "description": {
            "type": "string",
            "description": "Description of the application"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Examples of applications"
          }
        }
      },
      "description": "Applications of groups of this type"
    },
    "theorems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the theorem"
          },
          "statement": {
            "type": "string",
            "description": "Statement of the theorem"
          },
          "significance": {
            "type": "string",
            "description": "Significance of the theorem"
          }
        }
      },
      "description": "Theorems related to groups of this type"
    },
    "history": {
      "type": "object",
      "properties": {
        "discovery": {
          "type": "string",
          "description": "History of the discovery of this group type"
        },
        "nameOrigin": {
          "type": "string",
          "description": "Origin of the name"
        },
        "keyContributors": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Key contributors to the understanding of this group type"
        },
        "significantDevelopments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "year": {
                "type": "string",
                "description": "Year of the development"
              },
              "development": {
                "type": "string",
                "description": "Description of the development"
              },
              "contributor": {
                "type": "string",
                "description": "Contributor responsible for the development"
              }
            }
          },
          "description": "Significant developments in the understanding of this group type"
        }
      },
      "description": "Historical information about this group type"
    },
    "relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "relatedGroupType": {
            "type": "string",
            "format": "uri",
            "description": "Reference to a related group type"
          },
          "relationshipType": {
            "type": "string",
            "enum": [
              "generalization",
              "specialization",
              "isomorphic-for-specific-parameters",
              "subgroup-for-specific-parameters",
              "quotient-for-specific-parameters",
              "extension",
              "product"
            ],
            "description": "Type of relationship"
          },
          "description": {
            "type": "string",
            "description": "Description of the relationship"
          }
        }
      },
      "description": "Relationships to other group types"
    }
  },
  "examples": [
    {
      "id": "urn:uor:algebra:group:type:symmetric",
      "type": "GroupType",
      "groupFamily": "symmetric",
      "notation": {
        "standard": "Sₙ",
        "alternatives": ["SymmetricGroup(n)", "Sym(n)"],
        "latexRepresentation": "S_n"
      },
      "definition": {
        "informal": "The group of all permutations of n elements",
        "formal": "The group of all bijections from a set of n elements to itself, with composition as the operation",
        "constructiveMethods": [
          {
            "name": "Permutation Representation",
            "description": "Represent elements as permutations of {1, 2, ..., n}"
          },
          {
            "name": "Matrix Representation",
            "description": "Represent elements as permutation matrices"
          },
          {
            "name": "Group Presentation",
            "description": "Construct from generators and relations"
          }
        ],
        "presentation": "Generators: (1 2), (1 2 ... n). Relations: (1 2)² = e, ((1 2)(1 3))³ = e, and others."
      },
      "properties": {
        "order": "n!",
        "isFinite": true,
        "isAbelian": false,
        "isSimple": false,
        "isSolvable": false,
        "isNilpotent": false,
        "rank": "n-1",
        "derivedLength": "2 for n ≥ 2",
        "center": "Trivial for n ≥ 3, Z₂ for n = 2"
      },
      "canonicalExamples": [
        {
          "parameters": "n=3",
          "description": "The symmetric group on 3 elements",
          "order": "6",
          "elements": ["e", "(1 2)", "(1 3)", "(2 3)", "(1 2 3)", "(1 3 2)"],
          "generators": ["(1 2)", "(1 2 3)"],
          "id": "urn:uor:algebra:group:symmetric:S3"
        },
        {
          "parameters": "n=4",
          "description": "The symmetric group on 4 elements",
          "order": "24",
          "generators": ["(1 2)", "(1 2 3 4)"],
          "id": "urn:uor:algebra:group:symmetric:S4"
        },
        {
          "parameters": "n=5",
          "description": "The symmetric group on 5 elements",
          "order": "120",
          "generators": ["(1 2)", "(1 2 3 4 5)"],
          "id": "urn:uor:algebra:group:symmetric:S5"
        }
      ],
      "primeElementTypes": [
        {
          "type": "transposition",
          "description": "A permutation that swaps two elements and leaves all others fixed",
          "properties": [
            "order-2",
            "self-inverse",
            "conjugacy-class-determined-by-cycle-type"
          ],
          "examples": ["(1 2)", "(2 3)", "(i j)"]
        },
        {
          "type": "cycle",
          "description": "A permutation that shifts elements in a cyclic fashion",
          "properties": [
            "order-equals-cycle-length",
            "conjugacy-class-determined-by-cycle-type"
          ],
          "examples": ["(1 2 3)", "(1 2 3 4)", "(i₁ i₂ ... iₖ)"]
        }
      ],
      "factorizationRules": {
        "existence": "always",
        "uniqueness": "unique-up-to-ordering",
        "method": "Cycle decomposition",
        "canonicalForm": "Product of disjoint cycles, ordered by increasing first element in each cycle"
      },
      "subgroupStructure": {
        "maximalSubgroups": "For S₃: A₃, S₂×S₁. For general n, includes Aₙ and stabilizer subgroups.",
        "normalSubgroups": "For n ≠ 4: only {e} and Aₙ. For n = 4: {e}, V₄, A₄, S₄.",
        "subgroupLattice": "Complex hierarchical structure with increasing complexity for larger n",
        "characteristicSubgroups": "For n ≠ 4: only {e} and Aₙ. For n = 4: {e}, V₄, A₄, S₄."
      },
      "quotientGroups": [
        {
          "normalSubgroup": "Aₙ",
          "quotientType": "Cyclic",
          "isomorphicTo": "Z₂"
        }
      ],
      "representationTheory": {
        "irreducibleRepresentations": "In one-to-one correspondence with partitions of n",
        "characterTable": "Entries determined by partition structure and cycle types",
        "regularRepresentation": "Decomposed using character theory",
        "faithfulRepresentations": "Standard permutation representation and others"
      },
      "automorphismGroup": {
        "structure": "For n ≠ 2,6: Aut(Sₙ) ≅ Sₙ (via inner automorphisms). Special cases for n = 2,6.",
        "order": "n! for n ≠ 2,6",
        "innerAutomorphismGroup": "Isomorphic to Sₙ/Z(Sₙ), which is Sₙ for n ≥ 3",
        "outerAutomorphismGroup": "Trivial for n ≠ 2,6"
      },
      "cohomologyGroups": [
        {
          "degree": "1",
          "coefficients": "Z",
          "description": "H¹(Sₙ,Z) ≅ Z₂ (sign homomorphism)"
        },
        {
          "degree": "2",
          "coefficients": "Z",
          "description": "H²(Sₙ,Z) ≅ Z₂ for n ≥ 4"
        }
      ],
      "applications": [
        {
          "domain": "Combinatorics",
          "description": "Enumeration and counting problems",
          "examples": [
            "Burnside's lemma for counting orbits",
            "Polya enumeration theory"
          ]
        },
        {
          "domain": "Galois Theory",
          "description": "Study of polynomial equations and their solutions",
          "examples": [
            "Galois groups of polynomials",
            "Proving unsolvability of the quintic"
          ]
        },
        {
          "domain": "Molecular Symmetry",
          "description": "Classification of molecular structures",
          "examples": [
            "Point groups in chemistry",
            "Spectroscopic selection rules"
          ]
        }
      ],
      "theorems": [
        {
          "name": "Cayley's Theorem",
          "statement": "Every group G is isomorphic to a subgroup of the symmetric group on G",
          "significance": "Establishes symmetric groups as universal for finite groups"
        },
        {
          "name": "Simplicity of Alternating Groups",
          "statement": "The alternating group Aₙ is simple for n ≥ 5",
          "significance": "Provides examples of simple groups and has implications for solvability of polynomials"
        },
        {
          "name": "Classification of Finite Simple Groups",
          "statement": "Complete classification of all finite simple groups",
          "significance": "Alternating groups form one of the infinite families of finite simple groups"
        }
      ],
      "history": {
        "discovery": "Emerged from the study of polynomial equations in the late 18th and early 19th centuries",
        "nameOrigin": "From 'symmetric', referring to the symmetric nature of permutations",
        "keyContributors": [
          "Joseph-Louis Lagrange",
          "Paolo Ruffini",
          "Niels Henrik Abel",
          "Évariste Galois"
        ],
        "significantDevelopments": [
          {
            "year": "1770",
            "development": "Initial investigation of permutations of polynomial roots",
            "contributor": "Lagrange"
          },
          {
            "year": "1799",
            "development": "Use of permutation groups to prove unsolvability of quintic",
            "contributor": "Ruffini"
          },
          {
            "year": "1824",
            "development": "Rigorous proof of unsolvability of the general quintic",
            "contributor": "Abel"
          },
          {
            "year": "1832",
            "development": "Development of Galois theory connecting group theory and field extensions",
            "contributor": "Galois"
          }
        ]
      },
      "relationships": [
        {
          "relatedGroupType": "urn:uor:algebra:group:type:alternating",
          "relationshipType": "subgroup-for-specific-parameters",
          "description": "Aₙ is the normal subgroup of index 2 in Sₙ consisting of even permutations"
        },
        {
          "relatedGroupType": "urn:uor:algebra:group:type:cyclic",
          "relationshipType": "isomorphic-for-specific-parameters",
          "description": "S₂ is isomorphic to Z₂, the cyclic group of order 2"
        },
        {
          "relatedGroupType": "urn:uor:algebra:group:type:dihedral",
          "relationshipType": "isomorphic-for-specific-parameters",
          "description": "S₃ is isomorphic to D₃, the dihedral group of order 6"
        }
      ]
    }
  ]
}