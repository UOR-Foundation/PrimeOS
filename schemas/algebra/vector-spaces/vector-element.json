{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://uor-foundation.org/schemas/algebra/vector-spaces/vector-element.json",
  "title": "Vector Element Schema",
  "description": "Schema defining elements of a vector space with their properties and prime representation within the UOR framework",
  "@context": {
    "@vocab": "https://schema.org/",
    "uor": "https://uor-foundation.org/schemas/core/"
  },
  "type": "object",
  "required": ["id", "vectorSpaceDomain", "representation", "properties", "primeRepresentation"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uri",
      "description": "Unique identifier for the vector element"
    },
    "vectorSpaceDomain": {
      "type": "string",
      "format": "uri",
      "description": "Reference to the vector space domain this element belongs to"
    },
    "representation": {
      "type": "object",
      "description": "Standard representation of the vector element",
      "required": ["value", "form"],
      "properties": {
        "value": {
          "type": "string",
          "description": "Symbolic or numerical value representation"
        },
        "form": {
          "type": "string",
          "enum": [
            "coordinate",
            "component",
            "functional",
            "parametric",
            "geometric",
            "algebraic-expression",
            "basis-expansion"
          ],
          "description": "Form of representation"
        },
        "renderingNotation": {
          "type": "string",
          "description": "Notation used for rendering this element (e.g., LaTeX)"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of this element"
        }
      }
    },
    "properties": {
      "type": "object",
      "description": "Properties of this vector element",
      "required": ["isZeroVector"],
      "properties": {
        "isZeroVector": {
          "type": "boolean",
          "description": "Whether this element is the zero vector"
        },
        "isUnitVector": {
          "type": "boolean",
          "description": "Whether this element has a norm/magnitude of 1"
        },
        "isBasisVector": {
          "type": "boolean",
          "description": "Whether this element is a basis vector"
        },
        "dimension": {
          "type": "string",
          "description": "Dimension of the smallest subspace containing this vector"
        },
        "norm": {
          "type": "string",
          "description": "The norm or magnitude of the vector, if applicable"
        },
        "span": {
          "type": "string",
          "description": "Description of the subspace spanned by this vector"
        },
        "specialProperties": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Special properties of this vector"
        }
      }
    },
    "coordinates": {
      "type": "object",
      "description": "Coordinate representation of the vector",
      "properties": {
        "basis": {
          "type": "string",
          "description": "The basis with respect to which coordinates are given"
        },
        "components": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Component of the vector"
          },
          "description": "Components of the vector in the given basis"
        },
        "referenceFrame": {
          "type": "string",
          "description": "Reference frame for the coordinate system"
        }
      }
    },
    "primeRepresentation": {
      "type": "object",
      "description": "Representation of this element in terms of prime elements (basis vectors) in the UOR framework",
      "required": ["representationType", "description"],
      "properties": {
        "representationType": {
          "type": "string",
          "enum": [
            "basis-expansion",
            "canonical-basis",
            "orthogonal-projection",
            "sparse-representation",
            "minimal-support"
          ],
          "description": "Type of prime representation applicable to vector elements"
        },
        "description": {
          "type": "string",
          "description": "Description of how this element is represented in prime terms"
        },
        "basisElements": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "element": {
                "type": "string",
                "description": "Basis element"
              },
              "coefficient": {
                "type": "string",
                "description": "Coefficient of the basis element"
              }
            }
          },
          "description": "Basis elements and their coefficients"
        },
        "sparsity": {
          "type": "object",
          "properties": {
            "nonZeroCount": {
              "type": "string",
              "description": "Number of non-zero coefficients"
            },
            "sparsityRatio": {
              "type": "string",
              "description": "Ratio of non-zero coefficients to dimension"
            }
          },
          "description": "Sparsity properties of the representation"
        },
        "decompositionProperties": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Properties of the basis decomposition"
        },
        "minimality": {
          "type": "string",
          "description": "Whether this is a minimal representation"
        }
      }
    },
    "additiveInverse": {
      "type": "object",
      "description": "The additive inverse (negative) of this vector",
      "properties": {
        "representation": {
          "type": "string",
          "description": "Representation of the additive inverse"
        },
        "id": {
          "type": "string",
          "format": "uri",
          "description": "Reference to the additive inverse element entity"
        },
        "computation": {
          "type": "string",
          "description": "How to compute the additive inverse"
        }
      }
    },
    "linearRelationships": {
      "type": "array",
      "description": "Linear relationships with other vectors",
      "items": {
        "type": "object",
        "properties": {
          "relationType": {
            "type": "string",
            "enum": [
              "linear-combination",
              "linearly-dependent",
              "orthogonal",
              "parallel",
              "projection"
            ],
            "description": "Type of linear relationship"
          },
          "relatedVectors": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri",
              "description": "Reference to related vector element"
            },
            "description": "Vectors involved in the relationship"
          },
          "description": {
            "type": "string",
            "description": "Description of the relationship"
          },
          "formula": {
            "type": "string",
            "description": "Mathematical formula of the relationship"
          }
        }
      }
    },
    "innerProducts": {
      "type": "array",
      "description": "Inner products with other notable vectors",
      "items": {
        "type": "object",
        "properties": {
          "withVector": {
            "type": "string",
            "format": "uri",
            "description": "Reference to the other vector"
          },
          "value": {
            "type": "string",
            "description": "Value of the inner product"
          },
          "significance": {
            "type": "string",
            "description": "Significance of this inner product"
          }
        }
      }
    },
    "geometricProperties": {
      "type": "object",
      "description": "Geometric properties of the vector",
      "properties": {
        "direction": {
          "type": "string",
          "description": "Direction of the vector"
        },
        "length": {
          "type": "string",
          "description": "Length or magnitude of the vector"
        },
        "angles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "withVector": {
                "type": "string",
                "description": "Reference to the other vector"
              },
              "value": {
                "type": "string",
                "description": "Value of the angle"
              }
            }
          },
          "description": "Angles with other vectors"
        },
        "distance": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "fromVector": {
                "type": "string",
                "description": "Reference to the other vector"
              },
              "value": {
                "type": "string",
                "description": "Value of the distance"
              }
            }
          },
          "description": "Distances to other vectors"
        }
      }
    },
    "transformations": {
      "type": "array",
      "description": "Common transformations applied to this vector",
      "items": {
        "type": "object",
        "properties": {
          "transformationType": {
            "type": "string",
            "description": "Type of transformation"
          },
          "resultVector": {
            "type": "string",
            "format": "uri",
            "description": "Reference to the resulting vector"
          },
          "description": {
            "type": "string",
            "description": "Description of the transformation"
          },
          "formula": {
            "type": "string",
            "description": "Formula for the transformation"
          }
        }
      }
    },
    "primeCoordinates": {
      "type": "object",
      "description": "Coordinates of this element in the UOR prime coordinate system",
      "properties": {
        "system": {
          "type": "string",
          "format": "uri",
          "description": "Reference to the prime coordinate system"
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "prime": {
                "type": "string",
                "description": "Prime element or basis element"
              },
              "coefficient": {
                "type": "string",
                "description": "Coefficient"
              }
            }
          },
          "description": "Prime coordinates"
        },
        "coherenceMeasure": {
          "type": "string",
          "description": "Coherence measure of this representation"
        }
      }
    },
    "observerFrameRepresentations": {
      "type": "array",
      "description": "Representations in different observer frames",
      "items": {
        "type": "object",
        "properties": {
          "frame": {
            "type": "string",
            "format": "uri",
            "description": "Reference to the observer frame"
          },
          "representation": {
            "type": "string",
            "description": "Representation in this frame"
          },
          "properties": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Properties in this frame"
          }
        }
      }
    },
    "coherenceMeasures": {
      "type": "array",
      "description": "Coherence measures specific to this vector",
      "items": {
        "type": "object",
        "properties": {
          "measureName": {
            "type": "string",
            "description": "Name of the coherence measure"
          },
          "value": {
            "type": "string",
            "description": "Value of the measure for this vector"
          },
          "interpretation": {
            "type": "string",
            "description": "Interpretation of this measure value"
          }
        }
      }
    },
    "applications": {
      "type": "array",
      "description": "Applications or interpretations of this specific vector",
      "items": {
        "type": "object",
        "properties": {
          "domain": {
            "type": "string",
            "description": "Application domain"
          },
          "interpretation": {
            "type": "string",
            "description": "Interpretation in this domain"
          },
          "significance": {
            "type": "string",
            "description": "Significance in this domain"
          }
        }
      }
    }
  },
  "examples": [
    {
      "id": "urn:uor:algebra:vector-space:real-euclidean:element:standard-basis-e1",
      "vectorSpaceDomain": "urn:uor:algebra:vector-space:real-euclidean",
      "representation": {
        "value": "(1, 0, 0, ..., 0)",
        "form": "coordinate",
        "renderingNotation": "\\mathbf{e}_1",
        "description": "The first standard basis vector in ℝⁿ"
      },
      "properties": {
        "isZeroVector": false,
        "isUnitVector": true,
        "isBasisVector": true,
        "dimension": "1",
        "norm": "1",
        "span": "One-dimensional subspace along the first coordinate axis",
        "specialProperties": [
          "standard-basis-element",
          "orthogonal-to-other-standard-basis-vectors",
          "canonical-prime-element"
        ]
      },
      "coordinates": {
        "basis": "Standard basis {e₁, e₂, ..., eₙ}",
        "components": ["1", "0", "0", "...", "0"],
        "referenceFrame": "Cartesian coordinate system"
      },
      "primeRepresentation": {
        "representationType": "canonical-basis",
        "description": "As a standard basis vector, e₁ is itself a prime element in the vector space",
        "basisElements": [
          {
            "element": "e₁",
            "coefficient": "1"
          }
        ],
        "sparsity": {
          "nonZeroCount": "1",
          "sparsityRatio": "1/n"
        },
        "decompositionProperties": [
          "minimal",
          "unique",
          "canonical"
        ],
        "minimality": "This is a minimal representation as a prime element itself"
      },
      "additiveInverse": {
        "representation": "(-1, 0, 0, ..., 0)",
        "id": "urn:uor:algebra:vector-space:real-euclidean:element:negative-e1",
        "computation": "Negate each component: (-1, 0, 0, ..., 0)"
      },
      "linearRelationships": [
        {
          "relationType": "orthogonal",
          "relatedVectors": [
            "urn:uor:algebra:vector-space:real-euclidean:element:standard-basis-e2",
            "urn:uor:algebra:vector-space:real-euclidean:element:standard-basis-e3",
            "..."
          ],
          "description": "Orthogonal to all other standard basis vectors",
          "formula": "e₁ · eⱼ = 0 for all j ≠ 1"
        },
        {
          "relationType": "linearly-dependent",
          "relatedVectors": [
            "urn:uor:algebra:vector-space:real-euclidean:element:negative-e1"
          ],
          "description": "Linearly dependent with its negative",
          "formula": "e₁ + (-e₁) = 0"
        }
      ],
      "innerProducts": [
        {
          "withVector": "urn:uor:algebra:vector-space:real-euclidean:element:standard-basis-e1",
          "value": "1",
          "significance": "Self inner product equals the square of the norm"
        },
        {
          "withVector": "urn:uor:algebra:vector-space:real-euclidean:element:standard-basis-e2",
          "value": "0",
          "significance": "Orthogonality with other basis vectors"
        }
      ],
      "geometricProperties": {
        "direction": "Along the first coordinate axis",
        "length": "1",
        "angles": [
          {
            "withVector": "urn:uor:algebra:vector-space:real-euclidean:element:standard-basis-e2",
            "value": "90°"
          },
          {
            "withVector": "urn:uor:algebra:vector-space:real-euclidean:element:standard-basis-e3",
            "value": "90°"
          }
        ],
        "distance": [
          {
            "fromVector": "urn:uor:algebra:vector-space:real-euclidean:element:zero-vector",
            "value": "1"
          },
          {
            "fromVector": "urn:uor:algebra:vector-space:real-euclidean:element:standard-basis-e2",
            "value": "√2"
          }
        ]
      },
      "transformations": [
        {
          "transformationType": "Scaling",
          "resultVector": "urn:uor:algebra:vector-space:real-euclidean:element:scaled-e1",
          "description": "Scaling by a scalar α",
          "formula": "α·e₁ = (α, 0, 0, ..., 0)"
        },
        {
          "transformationType": "Rotation in the e₁-e₂ plane",
          "resultVector": "urn:uor:algebra:vector-space:real-euclidean:element:rotated-e1",
          "description": "Rotation by angle θ in the plane spanned by e₁ and e₂",
          "formula": "R(θ)·e₁ = (cos θ, sin θ, 0, ..., 0)"
        }
      ],
      "primeCoordinates": {
        "system": "urn:uor:algebra:vector-space:prime-coordinate-system:standard-basis",
        "coordinates": [
          {
            "prime": "e₁",
            "coefficient": "1"
          },
          {
            "prime": "e₂",
            "coefficient": "0"
          },
          {
            "prime": "...",
            "coefficient": "..."
          },
          {
            "prime": "eₙ",
            "coefficient": "0"
          }
        ],
        "coherenceMeasure": "1 (maximum sparsity)"
      },
      "observerFrameRepresentations": [
        {
          "frame": "urn:uor:algebra:vector-space:observer-frame:standard-basis",
          "representation": "(1, 0, 0, ..., 0)",
          "properties": ["canonical", "sparse"]
        },
        {
          "frame": "urn:uor:algebra:vector-space:observer-frame:rotated-basis",
          "representation": "Depends on the rotation parameters",
          "properties": ["generally-non-sparse", "coordinate-dependent"]
        }
      ],
      "coherenceMeasures": [
        {
          "measureName": "Sparsity",
          "value": "1/n",
          "interpretation": "Maximal sparsity, only one non-zero coordinate"
        },
        {
          "measureName": "Orthogonality",
          "value": "1",
          "interpretation": "Perfect orthogonality with respect to other basis vectors"
        },
        {
          "measureName": "Normality",
          "value": "1",
          "interpretation": "Unit norm, perfectly normalized"
        }
      ],
      "applications": [
        {
          "domain": "Physics",
          "interpretation": "Unit vector along the x-axis in a Cartesian coordinate system",
          "significance": "Represents direction and serves as a reference for measuring components"
        },
        {
          "domain": "Linear Algebra",
          "interpretation": "Standard basis vector and prime element in the vector space",
          "significance": "Fundamental building block for all vectors in the space"
        },
        {
          "domain": "Computer Graphics",
          "interpretation": "Unit vector along the x-axis in a 3D coordinate system",
          "significance": "Used for defining object orientations and camera directions"
        }
      ]
    }
  ]
}